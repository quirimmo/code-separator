{
	"name": "code-separator-vscode-extension",
	"displayName": "Code Separator Extension",
	"description":
		"Add code separators in VS Code for all the programming languages, in order to uniform your code when you want to separate few sections inside a file",
	"version": "0.0.1",
	"publisher": "Quirino Lo Russo",
	"engines": {
		"vscode": "^1.10.0"
	},
	"categories": ["Other"],
	"activationEvents": ["*"],
	"contributes": {
		"commands": [
			{
				"command": "codeseparator.codeseparator",
				"title": "Insert Code Separator"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Code Separator Configuration",
			"properties": {
				"codeseparator.comment": {
					"type": "string",
					"default": "//",
					"description": "Characters used in order to put a one line comment"
				}
			}
		},
		"keybindings": [
			{
        "command": "codeseparator.codeseparator",
				"key": "ctrl+alt+q",
				"mac": "cmd+alt+q",
				"when": "editorTextFocus"
			}
		]
	},
	"main": "./out/src/extension",
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.32",
		"@types/node": "^6.0.40",
		"mocha": "^2.3.3",
		"typescript": "^2.0.3",
		"vscode": "^1.0.0"
	}
}
